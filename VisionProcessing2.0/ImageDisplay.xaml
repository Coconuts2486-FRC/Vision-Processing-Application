<Window x:Class="VisionProcessing2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisionProcessing2._0"
        xmlns:emui="clr-namespace:Emgu.CV.UI;assembly=Emgu.CV.UI"
        mc:Ignorable="d"
        Title="CocoNuts Image Processing" Height="400" Width="600" SizeToContent="WidthAndHeight">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="column1"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <WindowsFormsHost Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Loaded="WindowsFormsHost_Loaded">
            <emui:ImageBox x:Name="CapturedImageBox"></emui:ImageBox>
        </WindowsFormsHost>
        <ScrollViewer Grid.Column="1">
            <TextBox x:Name="TextBoxConsole" FontFamily="Consolas"></TextBox>
        </ScrollViewer>
    </Grid>
</Window>
